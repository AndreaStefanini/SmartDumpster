<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/quant_trash"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="inseisci la quantiÃ  di rifiuti da buttare, per un massimo di 100"
        android:ems="10"
        android:hint="@string/placeholder"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/trashes"
        android:layout_width="104dp"
        android:layout_height="127dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:clipChildren="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/trash_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="TrashASelected"
            android:text="@string/TrashA" />

        <RadioButton
            android:id="@+id/trash_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="false"
            android:onClick="TrashBSelected"
            android:text="@string/TrashB" />

        <RadioButton
            android:id="@+id/trash_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="false"
            android:onClick="TrashCSelected"
            android:text="@string/TrashC" />
    </RadioGroup>

    <Button
        android:id="@+id/request_token"
        android:layout_width="153dp"
        android:layout_height="53dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="237dp"
        android:onClick="GetToken"
        android:text="@string/richiedi_token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/token"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="72dp"
        android:text="@string/btState"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/throw_garbage"
        android:layout_width="153dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="33dp"
        android:clickable="false"
        android:enabled="false"
        android:onClick="ThrowGarbage"
        android:text="@string/throw_garbage"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trashes"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        style="@style/AppTheme"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="@string/token"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extension" />

    <Button
        android:id="@+id/extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="63dp"
        android:enabled="false"
        android:onClick="RequestDelay"
        android:text="@string/extension"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_token" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="39dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="19dp"
        android:text="@string/warning_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btState" />

</androidx.constraintlayout.widget.ConstraintLayout>